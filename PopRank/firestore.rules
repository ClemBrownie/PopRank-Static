rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function signedIn() { 
      return request.auth != null; 
    }

    match /users/{uid} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == uid;
    }

    match /entries/{id} {
      allow read: if true;
      allow create, update, delete: if signedIn() && request.resource.data.uid == request.auth.uid;
    }
  }
}
